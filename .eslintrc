{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "react/jsx-props-no-spreading": "off"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "src/**/*.test.ts",
    "coverage/*",
    "jest-setup.ts",
    "jest.config.js"
  ]
}
